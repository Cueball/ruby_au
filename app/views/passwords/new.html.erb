<h2 class="rb-grey80 pl3">Reset your password</h2>
<p>
  Please enter your email address to reset your password.
</p>

<%= form_for :change_password, url: passwords_path do |form| %>
  <div class="text-field">
    <%= form.label :email %>
    <%= form.text_field :email, type: 'email' %>
  </div>

  <div class="submit-field">
    <%= form.submit 'Reset password', class: "anon-pro b h2 w4 pt1 pb1 pl4 pr4 tc b--solid bw175 b--rb-purple rb-purple rb-white-hover rb-purple-focus bg-rb-purple-hover shadow-4 no-underline" %>
  </div>
<% end %>
