<header>
  <h1>Sign in</h1>
</header>

<%= form_for :session, url: session_path, html: {class: 'standard'} do |form| %>
  <div class="field">
    <div class="label">
      <%= form.label :email %>
    </div>
    <div class="input">
      <%= form.text_field :email, type: 'email' %>
    </div>
  </div>

  <div class="field">
    <div class="label">
      <%= form.label :password %>
    </div>
    <div class="input">
      <%= form.password_field :password %>
    </div>
  </div>

  <div class="buttons">
    <%= form.submit 'Sign in' %>
  </div>

  <div class="other-links">
    <%= link_to 'Sign up', sign_up_path %>
    <%= link_to 'Forgot password?', new_password_path %>
  </div>
<% end %>
